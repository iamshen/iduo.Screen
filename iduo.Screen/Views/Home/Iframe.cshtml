@{
    Layout = null;
    var url = ViewBag.url;
    var htmlurl = ViewBag.htmlurl;
    @Html.AntiForgeryToken()
    Response.Headers.Set("X-Frame-Options", "sameorigin");
    Response.Headers.Set("X-Frame-Options", "allow-from");
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.title</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css">
    <link href="~/Content/bootstrap.css" rel="stylesheet" />

    <link href="~/Content/AdminLTE-2.3.11/dist/css/AdminLTE.css" rel="stylesheet" />
    <script src="~/Scripts/jquery/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap/bootstrap.js"></script>

    <script src="~/Scripts/popwin.js"></script>
    <style type="text/css">
         html, body {
           margin: 0px 0px;
           width: 100%;
           height: 100%;
          
        }
       iframe  {
           margin: 0px 0px;
           width: 100%;
           height: 100%;
           
        }
      
    </style>
    <style>
        .close {
            float: inherit!important;
            position: relative;
            display: inline-block;
            width: 100px;
            height: 100px;
            overflow: hidden;
            border-radius: 50px;
            background: black;
            opacity: 0.5;
        }
        .custom-close {
            float: inherit !important;
            position: relative;
            display: inline-block;
            width: 100px;
            overflow: hidden;
            background: #999;
            opacity: 0.5;
        }
            .close:hover {
                cursor: pointer;
                opacity: 1;
            }

            .close::before {
                transform: rotate(45deg);
            }

            .close::after {
                transform: rotate(-45deg);
            }

        .bottomDiv {
            position: fixed;
            height: 100px;
            line-height: 100px;
            text-align: center;
            background-color: rgba(255, 255, 255, 0.15);
            bottom: 15%;
            _position: absolute;
            width: 100%;
        }
        .back-span {
            margin-top: 35% !important;
            color: white;
            position: absolute;
            left: 24px;
            font-size: 28px;
        }
        .custom-botton {
            width: 150px;
            color: white;
            margin-top: 3%;
            font-size: 30px;
        }
    </style>

    <script type="text/javascript">
        function iframeHeight() {
            document.getElementById('iframeId').height = "100%";
        }
    </script>

</head>
<body  style="overflow:hidden;">
   
   @* <div class="bottomDiv"><a href="javascript:window.opener=null;window.open('','_self');window.close();" class="close"><span class="back-span">返回</span></a></div>*@

     <div class="bottomDiv"><a href="javascript:window.opener=null;window.open('','_self');window.close();"   class="btn  btn-lg custom-botton custom-close" onclick="CloseWin()">返回</a></div>


    @if (!string.IsNullOrEmpty(url))
    {
        <iframe id="iframeId" frameborder=0 scrolling="auto" src=@url />
    }

    <script>
        $(document).ready(function () {
            
            var screenWidth = $(window).width();//获取屏幕可视区域的宽度。
            $(".bottomDiv").width(screenWidth);//将宽度赋值给bottomDiv使其可以贯穿整个屏幕。
            var screenHeight = $(window).height();//获取屏幕可视区域的高度。
            var divHeight = $(".bottomDiv").height() + 1;//bottomDiv的高度再加上它一像素的边框。

            $(window).scroll(function () {
                var scrollHeight = $(document).scrollTop();//获取滚动条滚动的高度。
                if (!window.XMLHttpRequest) {
                    $(".bottomDiv").css("top", screenHeight + scrollHeight - divHeight);
                }//判断是否为IE6，如果是，执行大括号中内容
            })

        })


        function CloseWin() {

        }

    </script>
</body>

</html>
